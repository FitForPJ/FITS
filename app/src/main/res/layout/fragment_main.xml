<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thpa.a9019.fitnessmore.MainFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/calendar"
          android:layout_gravity="top"
          android:background="#3fb399"
          android:gravity="center"

          android:orientation="vertical"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin">

         <TextView
             android:id="@+id/yLabel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="75dp"
             android:text="2016"
             android:textColor="#ffffff"
             android:textSize="20sp" />


         <TextView
             android:id="@+id/mLabel"
             android:layout_width="165dp"
             android:layout_height="38dp"
             android:layout_marginTop="10dp"
             android:background="#206757"
             android:gravity="center"
             android:text="July"
             android:textColor="#ffffff"
             android:textSize="18sp" />

         <TextView
             android:layout_width="165dp"
             android:layout_height="5dp"
             android:background="#ffffff" />

         <TextView
             android:id="@+id/dLabel"
             android:layout_width="165dp"
             android:layout_height="55dp"
             android:background="#ffffff"

             android:gravity="center_horizontal"
             android:text="3"
             android:textColor="#206757"
             android:textSize="28sp" />


         <TextView
             android:id="@+id/eLabel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="60dp"
             android:layout_marginTop="-30dp"
             android:text="Sun"
             android:textColor="#206757"
             android:textSize="18sp" />

      </LinearLayout>

      <com.prolificinteractive.materialcalendarview.MaterialCalendarView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/calendar"
          android:layout_width="match_parent"
          android:layout_height="340dp"
          android:layout_alignParentBottom="true" />


   </RelativeLayout>
</FrameLayout>
