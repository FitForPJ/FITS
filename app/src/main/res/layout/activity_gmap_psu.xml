<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context ="com.thpa.a9019.fitnessmore.GmapPSU">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3fb399"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ศูนย์ฟิตเนต"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/psu" />

        </LinearLayout>
        <!-- Imformation -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:gravity="center"
                android:background="#3fb399"
                android:layout_gravity="center"
                android:text="รายละเอียด"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:background="#312E2E"
                android:textSize="18dp"
                android:text="ชื่อ : ศูนย์ฟิตเนต ม.อ.ภูเก็ต"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:background="#312E2E"
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="เวลา : 17.00 - 19.00 น."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#312E2E"
                android:textColor="#fff"
                android:paddingLeft="20dp"
                android:textSize="18dp"
                android:text="ผู้ใช้งาน : นักศึกษา บุคคลากร "/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>